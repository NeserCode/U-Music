{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:8888",
		"distDir": "../dist"
	},
	"package": {
		"productName": "U Music",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"http": {
				"all": true,
				"request": true,
				"scope": ["http://**", "https://**"]
			}
		},
		"windows": [
			{
				"title": "U Music",
				"width": 800,
				"height": 600,
				"minWidth": 800,
				"minHeight": 600,
				"decorations": false,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "nsis",
			"identifier": "com.nesercode.umusic-beta",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
